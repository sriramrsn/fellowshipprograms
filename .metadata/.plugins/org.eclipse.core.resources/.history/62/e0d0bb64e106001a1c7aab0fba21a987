package com.bridgelabz.fellowshipprograms.utility;

import java.util.Scanner;

public class Utility {
	public static Scanner sc= new Scanner(System.in);
	public static int[] flip(int n)
	{
		int[] count = new int[2];
		
//		double head=0,tail=0;
		for(int i=0;i<n;i++)
		{
			double d=Math.random();
			if(d<0.5)
			{
				count[0]++;
			}
			else
			{
				count[1]++;
			}
		}
		return count;
	}

	public static boolean leap(int n)
	{
		
		if(n%4==0 || n%100!=0 && n%400==0)
		{
		return true;
			
		}else 
			return false;
	}
	
	public static void pow(int n)
	{
		if(n>=0 && n <31)
		{
			double temp= Math.pow(2, n);
		System.out.println("power "+temp);
		for(int i=1;i<=n;i++)
		{
			double temp1 = 2*i;
			if(temp1>temp)
			{
				System.out.println(""+temp1);
				break;
			}
			else 
			{ 
				System.out.println(""+temp1);
				continue;
			}
		}
		}	
	}
	
	public static void harm(int n)
	{
		double temp,sum=0;
		for(int i=1;i<=n;i++)
		{
			temp=1/i;
			sum=sum+temp;
		}
		System.out.println("nth harmonic "+sum);
	}
	
	public static void prime(int n)
	{
		for(int i=2;i*i<=n;i++)
		{
			while(n%i==0)
			{
				System.out.print(""+i);
				n=n/i;
			}
		}
		if(n>1)
		{
			System.out.println(n);
		}
		else
		{
			System.out.println();
		}
	}
	
	// functional
	
	public static void array(int i,int j)
	{
		int [][] a= new int[i][j];
		System.out.println("enter a array elements:");
		for(int r=0;r<i;r++)
		{
			for(int c=0;c<j;c++)
			{
				a[r][c]=sc.nextInt();
			}
		}
		for(int r=0;r<i;r++)
		{
			for(int c=0;c<j;c++)
			{
				System.out.print("\t" +a[r][c]);			
				}
			System.out.println();
		}
		
		
	}
	
	public static void find (int[]A, int n,int sum) 
		{  
		    for (int i=0; i<n-2; i++) 
		    { 
		        for (int j=i+1; j<n-1; j++) 
		        { 
		            for (int k=j+1; k<n; k++) 
		            { 
		                if (A[i]+A[j]+A[k] ==sum) 
		                { 
		                    System.out.print("\ntriplet is :"+A[i]+","+A[j]+","+A[k]); 
		                    
		                } 
		            } 
		        } 
		    }   
		}
	public static void euclidedistance(double a,double b)
	{
		double temp=a*a+b*b;
		System.out.println("euclidean distance");
		double d= Math.sqrt(temp);
		System.out.println("distance: "+d);
	
	}
	
	public static void Windchill(double t,double v)
	{
		if(t<50 &&  3<v || v<120)
		{
			double temp1 = 0.6215*t;
			double temp2 = 0.4275*t;
			double temp3 = temp2+35.75;
			double temp4 = Math.pow(v, 0.16);
			double w= 35.74+temp1+temp3*temp4;
			System.out.println(" NWS Effective temperature: "+w);			
		}
		else
		{
			System.out.println("temperature and wind speed is invalid");
		}
	}
	

}
